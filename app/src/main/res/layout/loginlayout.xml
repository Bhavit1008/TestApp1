<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:id="@+id/welcome_txt"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CopsBot"
        android:id="@+id/copsbot_txt"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_below="@+id/welcome_txt"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_lock_outline_black_24dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="24dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#a9a9a9"
        android:layout_marginTop="8dp"
        android:layout_marginRight="200dp"
        android:id="@+id/line1"
        android:layout_below="@+id/copsbot_txt"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App for reporting complaint"
        android:layout_below="@+id/line1"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:minHeight="12dp"
        android:id="@+id/card_edt"
        android:elevation="12dp"
        >


        <EditText
            android:background="@null"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Enter phone number"
            android:textSize="20sp"
            android:inputType="phone"
            android:id="@+id/editTextMobile"
            android:padding="4dp"
             />

    </androidx.cardview.widget.CardView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#fff"
        android:background="#3E4FAC"
        android:textSize="20sp"
        android:id="@+id/buttonContinue"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complaint Annonymuously"
        android:id="@+id/unknown"
        android:textColor="#3E4FAC"
        android:layout_below="@+id/card_edt"
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>